package com.rapidraiderscores.rapidraiderscores.entities;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;

@Entity
@Table(name = "Team")
public class Team {
	@Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long teamId;

    private String teamName;
    private String captainName;

    @ManyToOne
    @JoinColumn(name = "tournamentID")
    private TournamentRegisteration tournament;

	public Long getTeamId() {
		return teamId;
	}

	public void setTeamId(Long teamId) {
		this.teamId = teamId;
	}

	public String getTeamName() {
		return teamName;
	}

	public void setTeamName(String teamName) {
		this.teamName = teamName;
	}

	public String getCaptainName() {
		return captainName;
	}

	public void setCaptainName(String captainName) {
		this.captainName = captainName;
	}

	public TournamentRegisteration getTournament() {
		return tournament;
	}

	public void setTournament(TournamentRegisteration tournament) {
		this.tournament = tournament;
	}

	public Team(Long teamId, String teamName, String captainName, TournamentRegisteration tournament) {
		//super();
		this.teamId = teamId;
		this.teamName = teamName;
		this.captainName = captainName;
		this.tournament = tournament;
	}

	public Team() {
		//super();
		// TODO Auto-generated constructor stub
	}

	@Override
	public String toString() {
		return "Team [teamId=" + teamId + ", teamName=" + teamName + ", captainName=" + captainName + ", tournament="
				+ tournament + "]";
	}
    
    
}

